<h3>Edit brand</h3>
<div class='standard-form'>
  <%= form_for @brand do |f| %>
    <% if @brand.errors.any? %>
      <% @brand.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
    <%= f.label :name, 'Name', class: 'form-text' %>
    <%= f.text_field :name, value: @brand.name %><br>
    <%= f.label :description, 'Description', class: 'form-text' %>
    <%= f.text_area :description, rows: 5, style: 'width: 100%', value: @brand.description %>
    <%= f.label :extra_info, 'Extra info', class: 'form-text' %>
    <%= f.text_area :extra_info, rows: 5, style: 'width: 100%', value: @brand.extra_info %>
    <%= f.label :avatar, 'Bild', class: 'form-text' %>
    <%= f.file_field :avatar, value: @brand.avatar %><br>
    <%= image_tag(@brand.avatar, width: 200) if @brand.avatar.attached? %><br>

    <%= f.submit 'Edit', class: 'add-button' %>
  <% end %>
  <br>
  <%= link_to 'Cancel', brands_path, class: 'cancel-button' %>
</div>
