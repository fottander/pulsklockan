<div class='container-main'>
  <h3>Add brands</h3>
  <div class='standard-form'>
    <%= form_for @brand do |f| %>
      <% if @brand.errors.any? %>
        <% @brand.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      <%= f.label :name, 'Name', class: 'form-text' %>
      <%= f.text_field :name %><br>
      <%= f.label :description, 'Description', class: 'form-text' %>
      <%= f.text_area :description, rows: 5, style: 'width: 100%' %>
      <%= f.label :extra_info, 'Extra info', class: 'form-text' %>
      <%= f.text_area :extra_info, rows: 5, style: 'width: 100%' %>
      <%= f.submit 'Add', class: 'add-button' %>
    <% end %>
    <br>
    <%= link_to 'Cancel', brands_path, class: 'cancel-button' %>
  </div>
</div>
