<h3>Add or edit categories on this page</h3>
<%= link_to 'Add category', new_category_path, class: 'add-button' %>
<div class="item-container">
  <% @categories.each do |category| %>
    <div class='item-box'>
      <%= category.id %>
      <%= category.name %>
      <%= link_to 'Edit', edit_category_path(category), class: 'reply-button' %><%= link_to 'Delete', category_path(category), data: { confirm: 'Are you sure?' }, method: :delete, class: 'add-button' %>
    </div>
  <% end %>
</div>
