<div class='container-main'>
  <h3>Edit products</h3>
  <div class='standard-form'>
    <%= form_for @product do |f| %>
      <% if @product.errors.any? %>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      <% end %>
      <%= f.label :name, 'Name', class: 'form-text' %>
      <%= f.text_field :name, value: @product.name %><br>
      <%= f.label :description, 'Description', class: 'form-text' %>
      <%= f.text_area :description, rows: 5, style: 'width: 100%', value: @product.description %>
      <%= f.label :price, 'Price', class: 'form-text' %>
      <%= f.text_field :price, value: @product.price %><br>
      <%= f.label :external_link, 'Länk', class: 'form-text' %>
      <%= f.text_field :external_link, value: @product.external_link %><br>
      <%= f.label :brand_id, 'Brand', class: 'form-text' %>
      <%= f.collection_select(:brand_id, Brand.all, :id, :name, { include_blank: true, selected: @product.brand_id }, { class: 'input-medium' }) %><br>
      <%= f.label :primary_category_id, 'Primary Category', class: 'form-text' %>
      <%= f.collection_select(:primary_category_id, Category.all, :id, :name, { include_blank: true, selected: @product.primary_category_id }, { class: 'input-medium' }) %><br>
      <%= f.label :secondary_category_id, 'Secondary Category', class: 'form-text' %>
      <%= f.collection_select(:secondary_category_id, Category.all, :id, :name, { include_blank: true, selected: @product.secondary_category_id }, { class: 'input-medium' }) %><br>
      <%= f.label :third_category_id, 'Third Category(bäst i test)', class: 'form-text' %>
      <%= f.collection_select(:third_category_id, Category.all, :id, :name, { include_blank: true, selected: @product.third_category_id }, { class: 'input-medium' }) %><br>
      <%= f.label :dimension, 'Mått', class: 'form-text' %>
      <%= f.text_field :dimension, value: @product.dimension %><br>
      <%= f.label :battery, 'Batteri', class: 'form-text' %>
      <%= f.text_field :battery, value: @product.battery %><br>
      <%= f.label :weight, 'Vikt', class: 'form-text' %>
      <%= f.text_field :weight, value: @product.weight %><br>
      <%= f.label :display, 'Display', class: 'form-text' %>
      <%= f.text_field :display, value: @product.display %><br>
      <%= f.label :water_res, 'Vattentålighet', class: 'form-text' %>
      <%= f.text_field :water_res, value: @product.water_res %><br>
      <%= f.label :memory, 'Lagring', class: 'form-text' %>
      <%= f.text_field :memory, value: @product.memory %><br>
      <%= f.label :gps, 'Gps', class: 'form-text' %>
      <%= f.text_field :gps, value: @product.gps %><br>
      <%= f.label :bluetooth, 'Bluetooth', class: 'form-text' %>
      <%= f.text_field :bluetooth, value: @product.bluetooth %><br>
      <%= f.label :wi_fi, 'Wi-Fi', class: 'form-text' %>
      <%= f.text_field :wi_fi, value: @product.wi_fi %><br>
      <%= f.label :os_system, 'Operativsystem', class: 'form-text' %>
      <%= f.text_field :os_system, value: @product.os_system %><br>
      <%= f.label :nfc, 'NFC', class: 'form-text' %>
      <%= f.text_field :nfc, value: @product.nfc %><br>
      <%= f.label :heart_rate, 'Pulsmätare', class: 'form-text' %>
      <%= f.text_field :heart_rate, value: @product.heart_rate %><br>
      <%= f.label :touch_screen, 'Pekskärm', class: 'form-text' %>
      <%= f.text_field :touch_screen, value: @product.touch_screen %><br>
      <%= f.label :voice_control, 'Röstkontroll', class: 'form-text' %>
      <%= f.text_field :voice_control, value: @product.voice_control %><br>
      <%= f.label :phone_call, 'Telefonsamtal', class: 'form-text' %>
      <%= f.text_field :phone_call, value: @product.phone_call %><br>
      <%= f.label :offline_music, 'Offline musik', class: 'form-text' %>
      <%= f.text_field :offline_music, value: @product.offline_music %><br>
      <%= f.label :apps, 'Appar', class: 'form-text' %>
      <%= f.text_field :apps, value: @product.apps %><br>
      <%= f.label :sleep_tracking, 'Sömn', class: 'form-text' %>
      <%= f.text_field :sleep_tracking, value: @product.sleep_tracking %><br>
      <%= f.label :fitness_features, 'Fitness', class: 'form-text' %>
      <%= f.text_field :fitness_features, value: @product.fitness_features %><br>

      <%= f.submit 'Edit', class: 'add-button' %>
    <% end %>
    <br>
    <%= link_to 'Cancel', products_path, class: 'cancel-button' %>
  </div>
</div>
