<div class=product-header>
  <h1><%= @product.name %></h1>
</div>
<div class='product-holder'>
  <div class='product-card-holder'>
    <%= image_tag(@product.avatar) if @product.avatar.attached? %>
  </div>
  <div class='product-card-holder'>
    <div class='product-compare-holder'>
      <div class='compare-header'>
        Prisjämförelse
      </div>
      <div class='compare-content'>
        <div class='compare-name'>
          <%= @product.store_1_name %>
        </div>
        <div class='compare-price'>
          <%= @product.store_1_price %>
        </div>
        <div class='compare-link'>
          <%= link_to 'Till butik', "#{@product.store_1_link}" %>
        </div>
      </div>
      <p style='font-size: 0.7em'><span style='color: green;'>✓</span> Endast pålitliga återförsäljare</p>
      <div class='product-facts'>
        <h4>Snabbfakta</h4>
        <div class='product-facts-holder'>
          <div class='facts-content'>
            Märke
          </div>
          <div class='facts-content'>
            <%= link_to "#{@product.brand.name}", brand_path(@product.brand) %>
          </div>
        </div>
        <div class='product-facts-holder'>
          <div class='facts-content'>
            Operativsystem
          </div>
          <div class='facts-content'>
            <%= @product.os_system %>
          </div>
        </div>
        <div class='product-facts-holder'>
          <div class='facts-content'>
            Pulsmätare
          </div>
          <div class='facts-content'>
            <%= @product.heart_rate %>
          </div>
        </div>
        <div class='product-facts-holder'>
          <div class='facts-content'>
            Batteritid
          </div>
          <div class='facts-content'>
            <%= @product.battery %>h
          </div>
        </div>
      </div>
    </div>
    <% if @product.store_2_name? %>
      <%= @product.store_2_name %><%= @product.store_2_price %><%= link_to 'Till butik', "#{@product.store_2_link}" %><br>
    <% end %>
    <% if @product.store_3_name? %>
      <%= @product.store_3_name %><%= @product.store_3_price %><%= link_to 'Till butik', "#{@product.store_3_link}" %><br>
    <% end %>
  </div>
</div>
